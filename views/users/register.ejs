<% layout('boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mt-2">
        <div class="row w-50 d-flex flex-column">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="first">First name</label>
                            <input class="form-control" type="text" id="first" name="first" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="last">Last Name</label>
                            <input class="form-control" type="text" id="last" name="last" required>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label" for="age">Age</label>
                                <select class="form-control" id="age" name="age" required>
                                    <% for (let i=18; i < 100; i++) { %>
                                        <option value="<%= i %>">
                                            <%= i %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label">Gender</label>
                                <div>
                                    <div>
                                        <input class="form-check-input" type="radio" value="MALE" name="gender"
                                            id="gender" checked>
                                        <label class="form-check-label" for="gender">Male</label>
                                    </div>
                                    <div>
                                        <input class="form-check-input" type="radio" value="FEMALE" name="gender"
                                            id="gender" checked>
                                        <label class="form-check-label" for="gender">Female</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-success btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>